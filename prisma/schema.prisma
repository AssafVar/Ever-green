// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}


model User {
  id        String   @id @default(uuid())
  firstName String
  lastName  String
  email     String  @unique
  password  String
  role      String
  createdAt DateTime @default(now())
  search Search[]
}

model Search {
  id String @id @default(uuid())
  userId String
  searchCode String
  searchString String
  createdAt DateTime @default(now())
  User User @relation(fields: [userId], references: [id])
}
